{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{%
endblock %}

{% block body %}
{{ form_start(produitForm) }}
<div class="container mt-5 pt-5 text-center">

    <div class="row">
        <div class="col-6">
            {{ form_row(produitForm.title, {
            'label': 'Titre',
            'attr': {
            'placeholder': 'Ex: Lampe nanoleaf'
            }
            }) }}
        </div>
        <div class="col-6">
            {{ form_row(produitForm.price, {
            'label': 'Prix (en €)',
            'attr': {
            'placeholder': 'Ex.: 123.45'
            }
            }) }}
        </div>



    </div>




    <div class="row">
        <div class="col-6">
            {{ form_row(produitForm.city, {
            'label': 'Ville',
            'attr': {
            'placeholder': 'Ex: Lille'
            }
            }) }}
        </div>
        <div class="col-6">
            {{ form_row(produitForm.postal_code, {
            'label': 'Code Postal:',
            'attr': {
            'placeholder': 'Ex: 5900'
            }
            }) }}
        </div>


        <div class="row">
            <div class="col-6 offset-3">

                {{ form_row(produitForm.description, {
                'label': 'Description',
                'attr': {
                'placeholder': 'Ajouter une description'
                }
                }) }}
            </div>

        </div>

    </div>
    <button class="btn btn-success">{{ app.request.attributes.get('_route') == 'produit_create' ? 'Créer' : 'Modifier'
        }}</button>
    {{ form_end(produitForm) }}

</div>




{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="container">
    <div class="row text-center">

        <h1>Page d'accueil</h1>
    </div>
    <div class="row">
        
   
        {% for element in produits %}
    <div class="col-4">
        <div class="card text-bg-dark text-light m-5" style="max-width: 18rem;">
            <div class="card-header text-center text-dark bg-warning">Titre: {{element.title|upper}}</div>
            <div class="card-body">
        
              
                <p class="card-text text-center">Produit n°{{element.id}}</p>
                <p class="card-text text-center">Description: {{element.description}}</p>
                <p class="card-text text-center">Prix: {{element.price}}€</p>
              <p class="card-text text-center">Ville: {{element.city}}</p>
              <p class="card-text text-center">Code postal: {{element.PostalCode}}</p>
            </div>
            <div class="card-footer">
                <a href="{{ path('produit_detail', {'id': element.id}) }}" class="btn btn-success">Voir plus </a>
            </div>
          </div>
        </div>
        {% endfor %}
    </div>
</div>

    
{% endblock %}
